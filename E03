programa {
  funcao inicio(){

    real num1, num2, num3, num4, media

    escreva ("Digite um número: ")
    leia (num1)
    escreva ("Digite outro número: ")
    leia (num2)
    escreva ("Digite outro número: ")
    leia (num3)
    escreva ("Digite outro número: ")
    leia (num4)

    media = (num1 + num2 + num3 + num4) / 4

    escreva("\nA média dos números é igual a: ", media)
  }
}
